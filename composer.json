{
    "name": "mwkcoding/feature-flags",
    "description": "A simple Laravel package to get feature flags in your project.",
    "keywords": [
        "mwkcoding",
        "feature-flags"
    ],
    "homepage": "https://github.com/mwkcoding/feature-flags",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mikkel KÃ¶hler",
            "email": "mikkel@mwkcoding.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Mwkcoding\\FeatureFlags\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mwkcoding\\FeatureFlags\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mwkcoding\\FeatureFlags\\FeatureFlagsServiceProvider"
            ],
            "aliases": {
                "FeatureFlags": "Mwkcoding\\FeatureFlags\\FeatureFlagsFacade"
            }
        }
    }
}
